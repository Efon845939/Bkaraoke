/**
 * @file Overview
 * This ruleset allows for open read and write access to the `song_requests` collection for simplified prototyping.
 *
 * @dataStructure
 * - /song_requests/{songRequestId}: Documents representing song requests.
 *
 * @keySecurityDecisions
 * - Open access for prototyping: all reads and writes are allowed.
 * - In a production environment, stricter rules based on user roles and data validation should be implemented.
 */
 

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows any user to read and write song requests.
     * @path /song_requests/{songRequestId}
     * @allow (read, write) - Any user can create, read, update, and delete song requests.
     * @deny None. All operations are allowed.
     * @principle Open access for prototyping.
     */
    match /song_requests/{songRequestId} {
      allow get, list: if true;
      allow create, update, delete: if true;
    }
  }
}