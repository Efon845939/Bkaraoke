/**
 * @fileoverview Firestore Security Rules for Tamam's Karaoke App.
 *
 * Core Philosophy:
 * This ruleset prioritizes secure data access by enforcing role-based authorization
 * for `students` and `audit_logs` collections. `song_requests` are publicly readable,
 * but writes are restricted to ensure data integrity.
 *
 * Data Structure:
 * - /students/{studentId}: Stores student and admin profiles.
 * - /song_requests/{songRequestId}: Stores song requests.
 * - /audit_logs/{logId}: Stores audit logs.
 *
 * Key Security Decisions:
 * - Students can only read and write their own profile data.
 * - Only admins can write to the audit logs.
 * - Song requests are publicly readable.
 *
 * Denormalization for Authorization:
 * The `SongRequest` entity denormalizes `studentName` onto the document. This avoids needing to `get()` the student document just to display the student's name in the UI.
 *
 * Structural Segregation:
 * Drafts vs. published content is not applicable in this data model.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows students to read their own profile data and admins to read all student profiles. Students can create their own profiles, but only admins can update profiles.
     * @path /students/{studentId}
     * @allow (read, get, list) if isOwner(studentId) || isAdmin()
     * @allow (create) if isOwner(studentId)
     * @deny (update, delete) if !isAdmin()
     * @principle Enforces document ownership for reads and restricts profile updates to admins.
     */
    match /students/{studentId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(studentId) {
        return isSignedIn() && request.auth.uid == studentId;
      }

      function isAdmin() {
        return isSignedIn() && get(/databases/$(database)/documents/students/$(request.auth.uid)).data.role == 'admin';
      }

      allow get: if isOwner(studentId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isOwner(studentId) && request.resource.data.id == request.auth.uid;
      allow update: if isAdmin() && resource.data.id == request.resource.data.id;
      allow delete: if false;
    }

    /**
     * @description Allows anyone to read song requests, but only the original submitter to modify them.
     * @path /song_requests/{songRequestId}
     * @allow (read, get, list) if true
     * @allow (create) if isSignedIn() && request.resource.data.studentId == request.auth.uid
     * @allow (update, delete) if isExistingOwner(resource.data.studentId)
     * @principle Allows public reads but restricts writes to document owner.
     */
    match /song_requests/{songRequestId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(studentId) {
        return isSignedIn() && request.auth.uid == studentId;
      }

      function isExistingOwner(studentId) {
        return isOwner(studentId) && resource != null;
      }

      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.studentId == request.auth.uid;
      allow update: if isExistingOwner(resource.data.studentId);
      allow delete: if isExistingOwner(resource.data.studentId);
    }

    /**
     * @description Allows only admins to read and write audit logs.
     * @path /audit_logs/{logId}
     * @allow (read, get, list) if isAdmin()
     * @allow (create, update, delete) if isAdmin()
     * @principle Restricts access to audit logs to administrators only.
     */
    match /audit_logs/{logId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isAdmin() {
        return isSignedIn() && get(/databases/$(database)/documents/students/$(request.auth.uid)).data.role == 'admin';
      }

      allow get: if isAdmin();
      allow list: if isAdmin();
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
  }
}